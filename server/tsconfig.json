{
  "extends": "../tsconfig.json",  // Inherit from the main tsconfig.json
  "compilerOptions": {
    "rootDir": "src",            // The root directory for your server code
    "outDir": "dist",            // The output directory for compiled files
    "esModuleInterop": true,     // Compatibility with CommonJS modules
    "module": "ESNext",          // Use ESNext module system
    "moduleResolution": "node",  // Resolve modules like Node.js does
    "target": "ES2020",          // JavaScript version for emitted code
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"]         // Skip type declaration checks for third-party libraries
  },
  "include": ["src"],  // Include all files inside the src folder
 
}
